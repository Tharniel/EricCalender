<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kalender.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="kalender.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Kalender picture" />
            <Label 
                Text="Välkommen till min Kalender"
                FontSize="26" 
                HorizontalOptions="Center"/>

            <Button
                x:Name="SignIn"
                Text="Sign In" 
                Clicked="OnClickedSignIn"
                HorizontalOptions="Fill" />

            <Button
                x:Name="Register"
                Text="Register"
                Clicked="OnClickedRegister"
                HorizontalOptions="Fill" />

            <Button
                x:Name="Calender"
                Text="Calender"
                Clicked="OnClickedCalender"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
